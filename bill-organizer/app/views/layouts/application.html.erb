<!DOCTYPE html>
<html>
<head>
  <title>BillOrganizer</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>
  <% if current_user %>
  <script>
    window.CURRENT_USER_ID = <%=current_user.id %>;
  </script>
  <% end %>
<%= yield %>

</body>
</html>
