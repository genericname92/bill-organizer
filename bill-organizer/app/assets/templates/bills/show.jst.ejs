<div class="billShowContainer group">

  <div class="billShowTitle pull-left"><%= bill.escape("title") %></div>
  <% if (window.CURRENT_USER_ID === parseInt(bill.escape("owner_id"))){ %>
    <button
      class="editBill pull-left btn-group btn-group-sm glyphicon glyphicon-pencil"
      type=button
      title="Edit this bill!">
    </button>
    <button
      class="deleteBill btn btn-danger pull-left btn-group btn-group-sm glyphicon glyphicon-remove-sign"
      type=button
      title="Delete this bill!">
    </button>
  <% } %>
<div class="billDetails">
  <table>
    <tr>
      <th>Type:</th>
      <td><%= bill.escape("bill_type") %> </td>
    </tr>
    <tr>
      <th>Amount:</th>
      <td><%= bill.escape("amount") %> </td>
    </tr>
    <tr>
      <th>From:</th>
      <td><%= bill.escape("from_date") %> </td>
    </tr>
    <tr>
      <th>To:</th>
      <td><%= bill.escape("end_date") %></td>
    <tr>
      <th>Updated at:</th>
      <td><%= date %> </td>
    </tr>
  </table>
</div>
<label> See Mail Previews!
  <button
    type="button"
    title="View Email Preview!"
    class="invoice glyphicon glyphicon-envelope" >
  </button>
</label>
</div>
<div class="roommateShowContainer group">
<% if (window.CURRENT_USER_ID === parseInt(bill.escape("owner_id"))){ %>
  <label> Add new person
    <button
      class="glyphicon glyphicon-plus roommateNew"
      title="Add a new roommate!">
    </button>
  </label>
<% } %>
  <div class="roommateContainer group"></div>
</div>
