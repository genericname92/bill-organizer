<div class="row">
  <ul class="errors">
  </ul>
  <form class="col-md-offset-4" role="form">
    <div class="form-group">
      <label>Bill Name
        <input
          class="form-control"
          type="text"
          name="title"
          value="<%=bill.escape("title")%>"
        >
      </label>
    </div>
    <div class="type_buttons">
      <div>Select from some common types or just type in your own</div><br>
      <div>
        <button type="button" class="Electricity btn btn-primary" value="Electricity">Electricity</button>
        <button type="button" class="Water btn btn-primary" value="Water">Water</button>
        <button type="button" class="Gas btn btn-primary" value="Gas">Gas</button>
        <button type="button" class="Internet btn btn-primary" value="Internet">Internet</button>
        <button type="button" class="Utilities btn btn-primary" value="Utilities">Utilities</button>
        <button type="button" class="Rent btn btn-primary" value="Rent">Rent</button>
      </div><br>
    </div>
    <div class="form-group">
      <label>Bill Type
        <input
          class="form-control bill_type"
          type="text"
          name="bill_type"
          placeholder="Electricity"
          value="<%=bill.escape("bill_type")%>"
        >
      </label>
    </div>
    <div class="form-group">
      <label>Amount
        <input
          class="form-control"
          type="text"
          name="amount"
          value="<%=bill.escape("amount")%>"
        >
      </label>
    </div>
    <div class="period">
    This bill is for the period
    </div>
    <div class="form-group">
      <label> From:
        <input
        class="form-control"
        type="date"
        name="from_date"
        value="<%=bill.escape("from_date")%>"
        >
      </label>
    </div>
    <div class="form-group">
      <label> End:
        <input
          class="form-control"
          type="date"
          name="end_date"
          value="<%=bill.escape("end_date")%>"
        >
      </label>
    </div>
    <div class="form-group">
      <input
        class="btn btn-success"
        type="submit"
        value="<%=formType%> a bill!"
      >
    </div>
  </form>
</div>
